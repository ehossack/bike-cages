{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["webpack-env", "jest"],
    "paths": {
      "@client/*": ["client/src/*"],
      "@server/*": ["server/src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "./**/*.ts",
    "client/src/**/*.tsx",
    "client/src/**/*.vue",
    "client/tests/**/*.ts",
    "client/tests/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
